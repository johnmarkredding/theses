<%= form_for(post) do |f| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.text_area :body, placeholder: "Your thesis", style: "width: 100%", rows: 3, required: true %>
  </div>

  <div class="field">
    <%= f.text_field :name, placeholder: "Your Name", required: true %>
    <%= f.text_field :email, placeholder: "Email", type:'email', required: true %>
  </div>

  <div class="field">
    <%= f.text_field :url, placeholder: "http://www.YourWebsite.com" %>
  </div>

  <div class="actions">
    <%= f.submit "Nail it!" %>
  </div>
<% end %>
