<!doctype html>
<html lang="en">
<head>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= content_for?(:title) ? yield(:title) : "Theses" %></title>
  <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "Theses" %>">
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => 'reload' %>
  <%= csrf_meta_tags %>
</head>
<body class="door">

	<p id="notice"><%= notice %></p>

	<h1>Nail It Up</h1>

  <article>
    <%= render 'form', post: @post %>
  </article>

  <% @posts.each do |post| %>
		<article>
	    <p class="content"><%= post.body %></p>
	    <p class="author">â€” <%= link_to post.name, post.url %></p>

      <!-- Your like button code -->
      <div class="fb-like" 
        data-href="<%= post_url(post) %>" 
        data-layout="standard" 
        data-action="like" 
        data-show-faces="true">
      </div>

		</article>
	<% end %>

  <div id="fb-root"></div>
  <script>(function(d, s, id) {
    var js, fjs = d.getElementsByTagName(s)[0];
    if (d.getElementById(id)) return;
    js = d.createElement(s); js.id = id;
    js.src = 'https://connect.facebook.net/en_US/sdk.js#xfbml=1&version=v2.10&appId=240980012606497';
    fjs.parentNode.insertBefore(js, fjs);
  }(document, 'script', 'facebook-jssdk'));</script>
</body>
</html>